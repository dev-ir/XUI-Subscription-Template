<!DOCTYPE html>
<html lang="fa">

<head>
    <title>User information : <%= data.email %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="theme-color" content="#1c1f30">
    <link rel="icon" type="image/x-icon" href="assets/img/icons/favicon.ico">
    <link rel="icon" type="image/png" sizes="32x32" href="assets/img/icons/favicon.ico" media="(prefers-color-scheme: light)">
    <link href="https://cdn.jsdelivr.net/npm/yekan-font@1.0.0/css/yekan-font.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://ios.v4b.top/assets/css/main.css?ver=17374638191438" rel="stylesheet">

    <style>
        :root {
            --bg-1: #0f1720;
            --bg-2: #11151b;
            --glass-1: rgba(255, 255, 255, 0.04);
            --glass-2: rgba(255, 255, 255, 0.02);
            --accent: #4cc9f0;
            --accent-2: #6be39b;
            --gold: #ffd24a;
            --muted: #bec5cc;
            --card: rgba(255, 255, 255, 0.03);
            --radius: 16px;
            --scrollbar-width: 8px;
            --scrollbar-thumb: rgba(76, 201, 240, 0.3);
            --scrollbar-thumb-hover: rgba(76, 201, 240, 0.5);
            --scrollbar-track: rgba(255, 255, 255, 0.02);
        }

        *,
        *::before,
        *::after {
            box-sizing: border-box;
        }

        /* Custom Scrollbar - Webkit (Chrome, Edge, Safari) */
        ::-webkit-scrollbar {
            width: var(--scrollbar-width);
            height: var(--scrollbar-width);
        }

        ::-webkit-scrollbar-track {
            background: var(--scrollbar-track);
            border-radius: 10px;
        }

        ::-webkit-scrollbar-thumb {
            background: var(--scrollbar-thumb);
            border-radius: 10px;
            transition: background 0.2s ease;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: var(--scrollbar-thumb-hover);
        }

        ::-webkit-scrollbar-corner {
            background: transparent;
        }

        /* Custom Scrollbar - Firefox */
        * {
            scrollbar-width: thin;
            scrollbar-color: var(--scrollbar-thumb) var(--scrollbar-track);
        }

        html {
            scroll-behavior: smooth;
        }

        html,
        body {
            height: 100%;
            margin: 0;
            padding: 0;
            direction: rtl;
            font-family: "Yekan", -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Tahoma", "Arial", sans-serif;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            font-feature-settings: "kern" 1;
            text-rendering: optimizeLegibility;
            background: radial-gradient(800px 400px at 10% 10%, rgba(76, 201, 240, 0.05), transparent 8%),
                        linear-gradient(180deg, var(--bg-1), var(--bg-2));
            color: #e6eef3;
            line-height: 1.6;
            letter-spacing: 0.01em;
        }

        body {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            overflow-x: hidden;
        }

        .container {
            max-width: 900px;
            width: min(900px, 94%);
            max-height: calc(100vh - 40px);
            margin: 64px auto;
            padding: 34px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
            overflow: auto;
            transform: translateY(0);
            scrollbar-width: thin;
            scrollbar-color: var(--scrollbar-thumb) var(--scrollbar-track);
        }

        .container::-webkit-scrollbar {
            width: var(--scrollbar-width);
        }

        .container::-webkit-scrollbar-track {
            background: var(--scrollbar-track);
            border-radius: 10px;
        }

        .container::-webkit-scrollbar-thumb {
            background: var(--scrollbar-thumb);
            border-radius: 10px;
        }

        .container::-webkit-scrollbar-thumb:hover {
            background: var(--scrollbar-thumb-hover);
        }

        .logo {
            width: 120px;
            height: 120px;
            border-radius: 999px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.02), rgba(0, 0, 0, 0.12));
            box-shadow: 0 10px 30px rgba(2, 6, 23, 0.7),
                        0 0 40px rgba(76, 201, 240, 0.06);
            border: 1px solid rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(6px) saturate(120%);
            transition: transform 0.28s cubic-bezier(0.2, 0.9, 0.2, 1);
        }

        .logo:hover {
            transform: translateY(-6px) rotate(-6deg);
        }

        .logo img {
            border-radius: 100%;
            width: 64%;
            height: 64%;
            object-fit: contain;
            filter: drop-shadow(0 6px 18px rgba(0, 0, 0, 0.55));
        }

        h3 {
            margin: 0;
            color: var(--gold);
            font-weight: 700;
            font-size: 22px;
            line-height: 1.4;
            text-align: center;
            text-shadow: 0 6px 18px rgba(0, 0, 0, 0.6);
            letter-spacing: 0.02em;
            font-feature-settings: "kern" 1;
        }

        .info-box {
            width: 100%;
            background: linear-gradient(180deg, 
                        rgba(255, 255, 255, 0.05) 0%,
                        rgba(255, 255, 255, 0.02) 50%,
                        rgba(0, 0, 0, 0.1) 100%);
            border-radius: 20px;
            padding: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4),
                        0 0 0 1px rgba(255, 255, 255, 0.05) inset,
                        inset 0 1px 0 rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.08);
            backdrop-filter: blur(12px) saturate(150%);
            display: flex;
            flex-direction: column;
            gap: 14px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .info-box:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.5),
                        0 0 0 1px rgba(255, 255, 255, 0.08) inset,
                        inset 0 1px 0 rgba(255, 255, 255, 0.12);
        }

        .info-box + .info-box {
            margin-top: 12px;
        }

        .copy-container {
            display: flex;
            gap: 12px;
            align-items: center;
            padding: 12px;
            border-radius: 12px;
            background: linear-gradient(180deg, rgba(255, 255, 255, 0.015), rgba(0, 0, 0, 0.06));
            border: 1px solid rgba(255, 255, 255, 0.02);
            transition: box-shadow 0.18s ease, transform 0.12s ease;
        }

        .copy-container:focus-within {
            box-shadow: 0 8px 28px rgba(76, 201, 240, 0.08);
            transform: translateY(-3px);
        }

        #copy-textarea {
            width: 100%;
            height: 48px;
            max-height: 80px;
            resize: none;
            border: 0;
            outline: none;
            background: transparent;
            color: #d0d8e0;
            font-size: 14px;
            font-family: "SF Mono", "Monaco", "Cascadia Code", "Roboto Mono", "Consolas", monospace;
            direction: ltr;
            padding: 6px 10px;
            border-radius: 8px;
            overflow: auto;
            line-height: 1.5;
            letter-spacing: 0.01em;
            scrollbar-width: thin;
            scrollbar-color: var(--scrollbar-thumb) transparent;
        }

        #copy-textarea::-webkit-scrollbar {
            width: 6px;
            height: 6px;
        }

        #copy-textarea::-webkit-scrollbar-track {
            background: transparent;
        }

        #copy-textarea::-webkit-scrollbar-thumb {
            background: var(--scrollbar-thumb);
            border-radius: 3px;
        }

        #copy-textarea::-webkit-scrollbar-thumb:hover {
            background: var(--scrollbar-thumb-hover);
        }

        .copy-icon {
            width: 50px;
            height: 50px;
            min-width: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            cursor: pointer;
            transition: transform 0.14s ease, box-shadow 0.12s ease;
            background: linear-gradient(180deg, rgba(255, 255, 255, 0.02), rgba(0, 0, 0, 0.06));
            border: 1px solid rgba(255, 255, 255, 0.02);
            box-shadow: 0 8px 22px rgba(2, 6, 15, 0.6);
        }

        .copy-icon i {
            color: var(--muted);
            font-size: 16px;
        }

        .copy-icon:active {
            transform: scale(0.98);
        }

        .info-item {
            display: flex;
            gap: 16px;
            align-items: center;
            padding: 18px 20px;
            border-radius: 16px;
            background: linear-gradient(135deg,
                        rgba(255, 255, 255, 0.03) 0%,
                        rgba(255, 255, 255, 0.01) 50%,
                        rgba(0, 0, 0, 0.05) 100%);
            border: 1px solid rgba(255, 255, 255, 0.06);
            transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            animation: fadeInUp 0.5s ease-out backwards;
        }

        .info-item:nth-child(1) { animation-delay: 0.1s; }
        .info-item:nth-child(2) { animation-delay: 0.2s; }
        .info-item:nth-child(3) { animation-delay: 0.3s; }
        .info-item:nth-child(4) { animation-delay: 0.4s; }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .info-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg,
                        transparent,
                        rgba(76, 201, 240, 0.3),
                        transparent);
            opacity: 0;
            transition: opacity 0.25s ease;
        }

        .info-item:hover {
            transform: translateY(-3px);
            background: linear-gradient(135deg,
                        rgba(255, 255, 255, 0.05) 0%,
                        rgba(255, 255, 255, 0.02) 50%,
                        rgba(0, 0, 0, 0.08) 100%);
            border-color: rgba(76, 201, 240, 0.2);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3),
                        0 0 0 1px rgba(76, 201, 240, 0.1) inset;
        }

        .info-item:hover::before {
            opacity: 1;
        }

        .info-item i {
            width: 56px;
            height: 56px;
            min-width: 56px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 22px;
            color: var(--accent);
            background: linear-gradient(135deg,
                        rgba(76, 201, 240, 0.15) 0%,
                        rgba(107, 227, 155, 0.1) 100%);
            border: 1px solid rgba(76, 201, 240, 0.2);
            box-shadow: 0 4px 12px rgba(76, 201, 240, 0.15),
                        inset 0 1px 0 rgba(255, 255, 255, 0.1);
            transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
        }

        .info-item:hover i {
            transform: scale(1.05) rotate(2deg);
            background: linear-gradient(135deg,
                        rgba(76, 201, 240, 0.2) 0%,
                        rgba(107, 227, 155, 0.15) 100%);
            box-shadow: 0 6px 16px rgba(76, 201, 240, 0.25),
                        inset 0 1px 0 rgba(255, 255, 255, 0.15);
        }

        .info-item p {
            margin: 0;
            flex: 1;
            color: #e8eef3;
            font-size: 15px;
            line-height: 1.7;
            letter-spacing: 0.01em;
            font-weight: 500;
        }

        .info-item p small {
            color: var(--muted);
            display: block;
            margin-top: 4px;
            font-size: 13px;
            line-height: 1.6;
            letter-spacing: 0.01em;
            opacity: 0.9;
            font-weight: 400;
        }

        .gb-value {
            direction: ltr;
            display: inline-block;
            unicode-bidi: embed;
            font-family: "SF Mono", "Monaco", "Cascadia Code", "Roboto Mono", "Consolas", monospace;
            font-weight: 600;
            color: #4cc9f0;
            letter-spacing: 0.03em;
            padding: 2px 8px;
            border-radius: 6px;
            background: rgba(76, 201, 240, 0.1);
            border: 1px solid rgba(76, 201, 240, 0.2);
            transition: all 0.2s ease;
        }

        .info-item:hover .gb-value {
            background: rgba(76, 201, 240, 0.15);
            border-color: rgba(76, 201, 240, 0.3);
            color: #5dd0f5;
            transform: scale(1.02);
        }

        .action-buttons {
            width: 100%;
            display: flex;
            gap: 14px;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 6px;
        }

        .action-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 12px 20px;
            border-radius: 999px;
            color: white;
            text-decoration: none;
            font-weight: 600;
            font-size: 15px;
            letter-spacing: 0.02em;
            line-height: 1.4;
            box-shadow: 0 12px 34px rgba(3, 7, 18, 0.6);
            transition: transform 0.14s ease, box-shadow 0.14s ease;
            border: 0;
        }

        .action-btn i {
            font-size: 16px;
            opacity: 0.95;
        }

        .action-btn:hover {
            transform: translateY(-6px);
        }

        .btn-telegram {
            background: linear-gradient(90deg, #3aa0ff 0%, #0e66d6 100%);
        }

        .btn-whatsapp {
            background: linear-gradient(90deg, #34d058 0%, #12b24a 100%);
        }

        .modal-overlay {
            position: fixed;
            inset: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(2, 6, 15, 0.75);
            backdrop-filter: blur(8px);
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.25s cubic-bezier(0.4, 0, 0.2, 1),
                        backdrop-filter 0.25s ease;
            z-index: 1000;
        }

        .modal-overlay.active {
            opacity: 1;
            pointer-events: auto;
        }

        .modal {
            background: linear-gradient(180deg, 
                        rgba(255, 255, 255, 0.08) 0%,
                        rgba(255, 255, 255, 0.03) 100%);
            padding: 32px 28px;
            border-radius: 20px;
            min-width: 280px;
            max-width: 90%;
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.08);
            box-shadow: 0 24px 80px rgba(0, 0, 0, 0.8),
                        0 0 0 1px rgba(255, 255, 255, 0.05),
                        inset 0 1px 0 rgba(255, 255, 255, 0.1);
            color: var(--muted);
            transform: scale(0.9) translateY(10px);
            opacity: 0;
            transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1),
                        opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            backdrop-filter: blur(20px) saturate(180%);
        }

        .modal-overlay.active .modal {
            transform: scale(1) translateY(0);
            opacity: 1;
        }

        .modal-icon {
            width: 64px;
            height: 64px;
            margin: 0 auto 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background: linear-gradient(135deg, 
                        rgba(76, 201, 240, 0.2) 0%,
                        rgba(107, 227, 155, 0.15) 100%);
            border: 2px solid rgba(76, 201, 240, 0.3);
            animation: checkmarkPulse 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .modal-icon i {
            font-size: 32px;
            color: var(--accent);
            animation: checkmarkScale 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.1s both;
        }

        @keyframes checkmarkPulse {
            0% {
                transform: scale(0.8);
                opacity: 0;
            }
            50% {
                transform: scale(1.1);
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        @keyframes checkmarkScale {
            0% {
                transform: scale(0);
            }
            50% {
                transform: scale(1.2);
            }
            100% {
                transform: scale(1);
            }
        }

        .modal p {
            margin: 0 0 24px 0;
            font-family: "Yekan", -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Tahoma", "Arial", sans-serif;
            font-weight: 600;
            font-size: 18px;
            line-height: 1.5;
            letter-spacing: 0.01em;
            color: #e8eef3;
        }

        .modal button {
            background: linear-gradient(135deg, var(--accent) 0%, #3ba8d0 100%);
            color: #06202a;
            border: 0;
            padding: 12px 32px;
            border-radius: 12px;
            cursor: pointer;
            font-family: "Yekan", -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Tahoma", "Arial", sans-serif;
            font-weight: 600;
            font-size: 15px;
            letter-spacing: 0.02em;
            line-height: 1.4;
            transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 4px 16px rgba(76, 201, 240, 0.3),
                        0 0 0 1px rgba(255, 255, 255, 0.1) inset;
            min-width: 120px;
        }

        .modal button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(76, 201, 240, 0.4),
                        0 0 0 1px rgba(255, 255, 255, 0.15) inset;
            background: linear-gradient(135deg, #5dd0f5 0%, #4bb8e0 100%);
        }

        .modal button:active {
            transform: translateY(0);
            box-shadow: 0 2px 8px rgba(76, 201, 240, 0.3),
                        0 0 0 1px rgba(255, 255, 255, 0.1) inset;
        }

        @media (max-width: 720px) {
            .container {
                margin: 30px 18px;
                padding: 20px;
            }

            .logo {
                width: 98px;
                height: 98px;
            }

            .copy-icon {
                width: 46px;
                height: 46px;
                min-width: 46px;
            }

            .info-box {
                padding: 16px;
                gap: 12px;
                border-radius: 16px;
            }

            .info-item {
                padding: 14px 16px;
                gap: 12px;
                border-radius: 14px;
            }

            .info-item i {
                width: 48px;
                height: 48px;
                min-width: 48px;
                font-size: 20px;
                border-radius: 12px;
            }

            .info-item p {
                font-size: 14px;
            }

            .gb-value {
                font-size: 13px;
                padding: 2px 6px;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="logo">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTumgBZSlZ1HxjNuj4oaHaPkR5EzlL9UQpOMA&s"
                alt="لوگو ققنوس">
        </div>

        <h3>شناسه <%= data.email %> خوش آمدید</h3>

        <div class="info-box">
            <div class="copy-container">
                <textarea id="copy-textarea" rows="2"><%= data.suburl %></textarea>
                <div class="copy-icon" onclick="copyToClipboard()">
                    <i class="fas fa-copy"></i>
                </div>
            </div>
        </div>

        <div class="info-box">
            <div class="info-item">
                <i class="fas fa-hourglass-half"></i>
                <p>وضعیت اکانت: <%= data.enable ? 'فعال' : 'غیرفعال' %></p>
            </div>

            <div class="info-item">
                <i class="fas fa-calendar-alt"></i>
                <p>
                    روزهای باقیمانده:
                    <%
                    try {
                        if (!data || typeof data.expiryTime === 'undefined') {
                            throw new Error("data یا expiryTime تعریف نشده است.");
                        }
                        const expiryTime = parseInt(data.expiryTime, 10);
                        if (isNaN(expiryTime)) {
                            throw new Error("expiryTime یک عدد معتبر نیست.");
                        }
                        const currentTime = Date.now();
                        if (expiryTime === 0) {
                            %>
                            بدون محدودیت
                            <%
                        } else if (expiryTime > currentTime) {
                            const remainingDays = Math.floor((expiryTime - currentTime) / (1000 * 60 * 60 * 24));
                            %>
                            <%= remainingDays %> روز
                            <%
                        } else {
                            %>
                            منقضی شده
                            <%
                        }
                    } catch (error) {
                        console.error("خطا در محاسبه روزهای باقیمانده:", error.message);
                        %>
                        نامشخص
                        <%
                    }
                    %>
                </p>
            </div>

            <div class="info-item">
                <i class="fas fa-chart-pie"></i>
                <p>
                    حجم مصرفی:
                    <span class="gb-value"><%= ((data.up + data.down) / 1_073_741_824).toFixed(2) %> GB</span>
                </p>
            </div>

            <div class="info-item">
                <i class="fas fa-database"></i>
                <p>
                    حجم خریداری شده:
                    <span class="gb-value"><%= (data.total / 1_073_741_824).toFixed(2) %> GB</span>
                </p>
            </div>
        </div>

        <div class="action-buttons">
            <a href="<%= data.TELEGRAM_URL %>?text=سلام من شناسه <%= data.email %> هستم" class="action-btn"
                style="background: linear-gradient(145deg, #007BFF, #0056b3);">
                <i class="fas fa-headset"></i>
                پشتیبانی در تلگرام
            </a>
        </div>
    </div>

    <div class="modal-overlay" id="modal-overlay" onclick="closeModalOnOverlay(event)">
        <div class="modal" onclick="event.stopPropagation()">
            <div class="modal-icon">
                <i class="fas fa-check"></i>
            </div>
            <p>لینک شما کپی شد</p>
            <button onclick="closeModal()">باشه</button>
        </div>
    </div>

    <script>
        let modalTimeout = null;

        async function copyToClipboard() {
            const textarea = document.getElementById("copy-textarea");
            const textToCopy = textarea.value;

            try {
                await navigator.clipboard.writeText(textToCopy);
                showModal();
            } catch (err) {
                // Fallback for older browsers
                const tempTextarea = document.createElement("textarea");
                tempTextarea.value = textToCopy;
                tempTextarea.style.position = "fixed";
                tempTextarea.style.opacity = "0";
                document.body.appendChild(tempTextarea);
                tempTextarea.select();
                document.execCommand("copy");
                document.body.removeChild(tempTextarea);

                showModal();
            }
        }

        function showModal() {
            const modal = document.getElementById("modal-overlay");
            modal.classList.add("active");
            
            // Clear any existing timeout
            if (modalTimeout) {
                clearTimeout(modalTimeout);
            }
            
            // Auto-close after 3 seconds
            modalTimeout = setTimeout(() => {
                closeModal();
            }, 3000);
        }

        function closeModal() {
            const modal = document.getElementById("modal-overlay");
            modal.classList.remove("active");
            
            if (modalTimeout) {
                clearTimeout(modalTimeout);
                modalTimeout = null;
            }
        }

        function closeModalOnOverlay(event) {
